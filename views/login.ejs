<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CTSS Login</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/index.css">
</head>
<body>
    <section name="navbar">
        <nav class="navbar navbar-expand-md navbar-dark bg-blue fixed-top" aria-label="Fourth navbar example">
            <div class="container-fluid">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS-g2LuJkdhy4fLxJ0UHP_2uDM14s9dDGKeHw&s" height="40px" margin="auto"/>
                <a class="navbar-brand" href="#">Login</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
              </div>
        </nav>
    </section>  
    <div class="background">
        <div class="form">
            <form class="login" action="/login" method="post">
                <div class="form-group">
                    <h3 class="form-heading">Login</h3>
                </div>
                <div class="form-group">
                    <label for="username">Username:</label>
                    <div class="custom-dropdown">
                      <select id="username" name="username" class="form-control" required>
                        <option value="" disabled selected>Select a username</option>
                        <% usernames.forEach(function(user) { %>
                          <option value="<%= user.username %>"><%= user.username %></option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                <div class="form-group">
                  <label for="name">Password:</label>
                  <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="button-submit">
                <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <% if (typeof message !== 'undefined') { %>
                    <div class="form-group">
                      <p class="form-ending"><%= message %></p>
                    </div>
                <% } %>
            </form>
        </div>
    </div>
    <footer>
        <div class="footer"></div>
    </footer>
    <script src="/js/bootstrap.bundle.min.js"></script>
</html>