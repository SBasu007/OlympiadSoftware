<%- include("../partials/header.ejs")%>
<div class="add-student-form">
    <form action="/addUser" method="POST">
        <h3 style="text-align: center; margin-bottom: 20px;">User Details</h3>
        <% if (typeof error_message !== 'undefined') { %>
          <p style="text-align: center; color:red"><%= error_message %></p>
        <% } %>
        <div class="form-row">
          <div class="form-row-element">
            <label class="student-label" for="user">USERNAME <span style="color:red">*</span></label>
            <input type="text"  id="user" name="user" required autocomplete="off">
          </div>
        </div>
        <div class="form-row">
          <div class="form-row-element" style="position: relative;">
            <label class="student-label"  for="pass">PASSWORD <span style="color:red">*</span></label>
            <input type="text"  id="pass" name="pass" required autocomplete="off">
          </div>
        </div>
        
        
        <div class="button-submit">
          <button type="submit" class="btn btn-primary" id="submit" >Add</button>
          <a href="/addStudent" style="margin-left:20px" class="btn btn-primary">Done</a>
          <a href="/home" style="margin-left:20px" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>    


<%- include("../partials/footer.ejs")%>
